<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robomop">

    <!-- Robot Parameters -->
    <xacro:property name="wheel_z_offset" value="-0.0155" />
    <xacro:property name="wheel_x_offset" value="0.11" />
    <xacro:property name="front_wheel_x_offset" value="0.006" />
    <xacro:property name="wheel_y_offset" value="0.155" />
    <xacro:property name="wheel_mass" value="3.62874" />
    <xacro:property name="chassis_mass" value="1.36078" />

    <!-- Robot Description -->
    <link name="base_link" />
    <link name="chassis_link">
        <visual>
            <origin xyz="0.01 0.02 0" rpy="0 -0 1.5708" />
            <geometry>
                <mesh filename="file://$(find robomop_description)/meshes/visual/robomop_shell.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0.01 0.02 0" rpy="0 -0 1.5708" />
            <geometry>
                <mesh filename="file://$(find robomop_description)/meshes/visual/robomop_shell.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0.0 0.0 0.02" rpy="0 0 0"/>
            <mass value="${chassis_mass}" />
            <inertia ixx="0.006453" ixy="0"  ixz="0" iyy="0.0117" iyz="0" izz="0.015812" />
        </inertial>
    </link>
    
    <link name="rl_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="file://$(find robomop_description)/meshes/visual/robomop_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.57 3.1415 0" />
            <geometry>
                <mesh filename="file://$(find robomop_description)/meshes/visual/robomop_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.008093" ixy="0"  ixz="0" iyy="0.014226" iyz="0" izz="0.008093" />
        </inertial>
        <mu>5.0</mu>
    </link>

    <link name="rr_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="file://$(find robomop_description)/meshes/visual/robomop_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.57 3.1415 3.1415" />
            <geometry>
                <mesh filename="file://$(find robomop_description)/meshes/visual/robomop_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="${wheel_mass}" />
            <inertia ixx="0.008093" ixy="0"  ixz="0" iyy="0.014226" iyz="0" izz="0.008093" />
        </inertial>
        <mu>5.0</mu>
    </link>

    <joint name="base_to_chassis" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="0 0 0.1"/>
    </joint>

    <joint name="rl_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="rl_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 0"/>
    </joint>

    <joint name="rr_wheel_to_chassis" type="continuous">
        <parent link="chassis_link"/>
        <child link="rr_wheel_link"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0 0"/>
    </joint>

    <gazebo>
        <plugin name="ignition::gazebo::systems::DiffDrive" filename="ignition-gazebo-diff-drive-system"> 
            <num_wheel_pairs>2</num_wheel_pairs>
            <!-- Wheel Information -->
            <left_joint>rl_wheel_to_chassis</left_joint>
            <right_joint>rr_wheel_to_chassis</right_joint>
            <wheel_separation>0.26</wheel_separation>
            <wheel_radius>0.08</wheel_radius>

            <!-- Limits -->
            <max_linear_acceleration>5</max_linear_acceleration>
            <min_linear_acceleration>-5</min_linear_acceleration>
            <max_angular_acceleration>4</max_angular_acceleration>
            <min_angular_acceleration>-4</min_angular_acceleration>

            
            <!-- Output -->
            <frame_id>odom</frame_id>
            <child_frame_id>base_link</child_frame_id>

            <!-- Topics -->
            <topic>/cmd_vel</topic>
            <odom_topic>/odometry/wheels</odom_topic>
            <tf_topic>/tf_gazebo</tf_topic>

        </plugin>

        <plugin filename="ignition-gazebo-joint-state-publisher-system" name="ignition::gazebo::systems::JointStatePublisher">
            <topic>/joint_states</topic>
        </plugin>
    </gazebo>

    <gazebo reference="rl_wheel_link">
        <mu1 value="200.0" />
        <mu2 value="200.0" />
        <kp  value="1000000.0" />
        <kd  value="1.0" />
        <minDepth>0.005</minDepth>
    </gazebo>
    <gazebo reference="rr_wheel_link">
        <mu1 value="200.0" />
        <mu2 value="200.0" />
        <kp  value="1000000.0" />
        <kd  value="1.0" />
        <minDepth>0.005</minDepth>
    </gazebo>

</robot>